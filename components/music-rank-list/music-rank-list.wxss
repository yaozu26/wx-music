.rank-area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 300rpx;
  background-color: #ddd;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.rank {
  margin: 0 30rpx;
}

.title {
  font-size: 40rpx;
  margin-bottom: 20rpx;
}

.song-list {
  font-size: 30rpx;
  color: #333;
}

.item {
  display: flex;
}

.text {
  flex: 1;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}



.cover {
  position: relative;
}

.image {
  vertical-align: top;
  height: 300rpx;
}

.count {
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #eee;
  background-color: rgba(0, 0, 0, .5);
}