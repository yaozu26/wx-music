  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.info {
  display: flex;
  align-items: center;
}

.image {
  width: 100rpx;
  border-radius: 10rpx;
}

.desc {
  margin-left: 20rpx;
}

.title {
