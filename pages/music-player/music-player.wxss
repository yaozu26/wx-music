/* 主背景 */
.bg, .bg-cover {
  position: fixed;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.bg-cover {
  background-color: rgba(0, 0, 0, .3);
  backdrop-filter: blur(20px);
}

/* 头部导航栏 */
.center {
  display: flex;
  font-size: 28rpx;
  color: #aaa;
}

.line {
  margin: 0 10rpx;
}

.active {
  color: #fff;
}

/* 歌曲内容 */
.song-item {
  display: flex;
  flex-direction: column;
  padding: 40rpx 60rpx;
  box-sizing: border-box;
  color: #fff;
}

.cover {
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}

.img {
  display: flex;
  width: 100%;
}

.name {
  margin-top: 40rpx;
  font-size: 44rpx;
  font-weight: 700;
}

.ar {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #eee;
}

.song-word {
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
}

.time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.control {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}

.btn {
  width: 70rpx;
}

.play {
  width: 100rpx;
}

/* 歌词内容 */
.lyric-list {
  height: 100%;
  color: #aaa;
  font-size: 28rpx;
  text-align: center;
  box-sizing: border-box;
}

.lyric-list::-webkit-scrollbar {
  display: none;
}

.lyric-item {
  height: 35px;
  line-height: 35px;
  
  white-space: nowrap;
  overflow-x: auto;
}

.active-item {
  color: #0f0;
  font-size: 32rpx;
}